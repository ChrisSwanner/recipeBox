@{
  Layout = "_Layout";
}

<h2>Categories:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var category in Model)
    {
      <li><h3><a href="/categories/@category.GetId()">@category.GetName()</a></h3></li>
    }
  </ul>
}
<hr>
<h4><a href="/categories/new">Add a New Category</a></h4>
