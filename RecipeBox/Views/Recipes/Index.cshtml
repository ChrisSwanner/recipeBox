@{
  Layout = "_Layout";
}
<h1>Recipe Box</h1>
<hr />
<h2>Recipes:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var recipe in Model)
    {
      <li><a href='/recipes/@recipe.GetId()'>@recipe.GetName()</a></li>
      <p><a href="/recipes/@recipe.GetId()/delete">Delete Recipe</a></p>
      <p><a href="/recipes/@recipe.GetId()/update">Update Recipe</a></p>
    }
  </ul>
}
<h4><a href="/recipes/new">Add new recipe</a></h4>
<h4><a href="/">Return home</a></h4>
